<script src="https://cdn.bootcss.com/handlebars.js/4.0.12/handlebars.min.js"></script>
<script id="context" type="text/x-handlebars-template">
  \{{#each this}}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">\{{title}} \{{createDate}}</h3>
      </div>
      <div class="panel-body">
        \{{content}}
        <button type="button" class="btn btn-primary btn-xs">learn more</button>
        <button type="button" class="btn btn-warning btn-xs" data-toggle="modal" data-target="#myModal">edit</button>
      </div>
    </div>
  \{{/each}}
</script>
<script>
  $(function() {
    // 模版
    let template = Handlebars.compile($('#context').html());

    $.ajax({
      type: 'get',
      url: 'http://localhost:3000/getdiary',
      data: {},
      success: function(data) {
        // 数据
        console.log(data);
        // 
        $('#body').html(template(data.data));
      },
      error: function(error) {
        console.log(error);
      }
    })
  });
</script>