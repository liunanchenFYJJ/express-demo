  <script src="https://cdn.bootcss.com/showdown/1.8.7/showdown.js"></script>
  <script>
    $(function() {
      $('li').each(function() {
        let path_name = window.location.href.split('/')[3];
        let a_href = $(this).children()[0];
        
        if (a_href) {
          let sub_a_href = a_href.href.split('/')[3];
          if (sub_a_href == path_name) {
            $(this).addClass('active').siblings().removeClass('active');
          }
        }
        //if ($(this).hasClass(class_name)) {
          //$(this).addClass('active').siblings().removeClass('active');
